<body>
<div class="container my-4">
    <form id="filtroForm" method="GET" action="/cursos">
        <select name="area" id="filterArea" class="form-select w-25 mx-auto" onchange="this.form.submit()">
            <option value="">Cursos</option>
            {{#each areaCurso}}
            <option value="{{this.id}}">{{this.nombre}}</option>
            {{/each}}
            <option value="">Todas las áreas</option>
        </select>
    </form>
</div>


<div class="container main-content d-flex flex-column align-items-center justify-content-center text-center">
    <div class="row">
        {{#each cursos}}
        <div class="col-md-4 col-sm-6 mb-4 d-flex justify-content-center">
            <div class="card h-100">
                <img src="{{this.portada}}" class="card-img-top" alt="Portada del Curso">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{this.nombre}}</h5>
                    <p class="card-text">{{this.descripcion}}</p>
                    <a href="/curso/{{this.id}}" class="btn btn-warning text-light mt-auto">Ver más</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

