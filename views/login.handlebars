<body class="background-inicio">
    <div class="container main-content d-flex flex-column align-items-center justify-content-center text-center">
        <h2 class="text-color">Iniciar Sesión</h2>
        <hr class="w-50" />

        <form id="login" class="w-50 text-light">
            <div class="form-group row m-auto">
                <div class="form-group col-12">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" />
                </div>
                <div class="form-group col-12">
                    <label>Contraseña</label>
                    <input type="password" name="contraseña" class="form-control" />
                </div>
            </div>

            <div class="d-flex justify-content-center py-5">
                <button type="submit" class="btn btn-warning text-light btn-custom mx-3">Ingresar</button>
                <a class="btn btn-outline-light mx-3 btn-custom" href="/register">Registrarme</a>
            </div>
        </form>
    </div>
